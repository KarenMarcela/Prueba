# ============================================================================
# VARIABLES DE ENTORNO - BACKEND HACARITAMA
# ============================================================================
# IMPORTANTE: Copiar este archivo como .env y configurar con valores reales
# Comando: cp .env.example .env

# ============================================================================
# BASE DE DATOS
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hacaritama_db
DB_USERNAME=postgres
DB_PASSWORD=tu_password_aqui

# ============================================================================
# JWT (JSON Web Token)
# ============================================================================
# IMPORTANTE: Cambiar en producción por una clave segura de al menos 256 bits
JWT_SECRET=HacaritamaSecretKey2025ChangeThisInProduction
JWT_EXPIRATION=86400000

# ============================================================================
# EMAIL (SMTP)
# ============================================================================
# Para Gmail: Usar "App Password" (no la contraseña normal)
# Configurar en: https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_app_password_aqui
MAIL_FROM=noreply@hacaritama.com

# ============================================================================
# PASARELA DE PAGOS
# ============================================================================
# MercadoPago (opcional)
MERCADOPAGO_ACCESS_TOKEN=TEST-1234567890-your-access-token
MERCADOPAGO_PUBLIC_KEY=TEST-your-public-key

# PayU (opcional)
PAYU_API_KEY=your_api_key
PAYU_API_LOGIN=your_api_login
PAYU_MERCHANT_ID=your_merchant_id
PAYU_ACCOUNT_ID=your_account_id

# ============================================================================
# ENTORNO
# ============================================================================
SPRING_PROFILES_ACTIVE=dev

# ============================================================================
# LOGS
# ============================================================================
LOG_LEVEL=DEBUG
LOG_FILE_PATH=logs/hacaritama.log

# ============================================================================
# SEGURIDAD
# ============================================================================
# CORS: Separar múltiples orígenes con coma
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# ALMACENAMIENTO
# ============================================================================
# Ruta para almacenar PDFs de pasajes
STORAGE_PATH=./storage/pasajes

# ============================================================================
# SERVICIOS EXTERNOS (opcional)
# ============================================================================
# Google Maps API (para calcular rutas)
GOOGLE_MAPS_API_KEY=your_google_maps_key

# SMS Provider (para notificaciones)
SMS_API_KEY=your_sms_api_key
SMS_SENDER=Hacaritama
